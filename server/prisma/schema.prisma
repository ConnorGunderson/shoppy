datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id         String      @id @default(cuid())
  name       String
  price      Int
  image      String
  likes      Int         @default(0)
  orderItems OrderItem[]
}

model Order {
  id       String      @id @default(cuid())
  email    String
  subtotal Int
  tax      Int
  total    Int
  created  DateTime    @default(now())
  items    OrderItem[]
}

model OrderItem {
  id        String  @id @default(cuid())
  price     Int
  itemCount Int
  orderId   String
  productId String
  product   Product @relation(fields: [productId], references: [id])
  order     Order   @relation(fields: [orderId], references: [id])
}
